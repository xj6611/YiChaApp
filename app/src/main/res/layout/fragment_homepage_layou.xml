<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">

                <TextView
                    android:id="@+id/City_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawablePadding="@dimen/dp_6"
                    android:text="首页"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_20" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/SouSuo_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_hei2_miaobiao"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:drawableLeft="@mipmap/map_search_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="搜索"
                    android:text=""
                    android:textColorHint="@color/A999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/HomePageBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/dp_15"
                app:AutoPlayTime="3000"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="true"
                app:pageChangeDuration="800"
                app:tipTextSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/Phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/a4"
                    android:gravity="center"
                    android:text="手机"
                    android:textColor="@color/A666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/Pc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/a2"
                    android:gravity="center"
                    android:text="电脑"
                    android:textColor="@color/A666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/DianDongChe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/a3"
                    android:gravity="center"
                    android:text="电动车"
                    android:textColor="@color/A666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <Button
                android:id="@+id/PingGu_Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_80"
                android:background="@drawable/login_but_select"
                android:text="去评估"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>