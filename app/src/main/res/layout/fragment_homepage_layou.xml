<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_44">

                <TextView
                    android:id="@+id/City_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawablePadding="@dimen/dp_6"
                    android:text="涉案财物价格预估参考系统 "
                    android:textColor="#ff000000"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/SouSuo_linear"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/bg_hei2_miaobiao"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:drawableLeft="@mipmap/map_search_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="搜索"
                    android:text=""
                    android:textColorHint="@color/A999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/HomePageBanner"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginTop="@dimen/dp_15"
                app:AutoPlayTime="3000"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="true"
                app:pageChangeDuration="800"
                app:tipTextSize="12.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Phone"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/d1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="手机"
                        android:textColor="@color/A666666"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Pc"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/d2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="电脑"
                        android:textColor="@color/A666666"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DianDongChe"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/d3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="电动车"
                        android:textColor="@color/A666666"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/PingGu_Button"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/login_but_select"
                android:text="去评估"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10.0dip"
        android:gravity="center"
        android:text="南京市公安局雨花台分局"
        android:textColor="@color/A333333"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>