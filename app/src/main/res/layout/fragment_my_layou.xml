<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="我的"
        android:textColor="#ff000000"
        android:textSize="18.0sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip">

                <com.yicha.app.Class.CircleImageView
                    android:id="@+id/My_TouXiang_CircleImageView"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15.0dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/touciang" />

                <TextView
                    android:id="@+id/My_name_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/My_TouXiang_CircleImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:text="佚名（cx0000）"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/My_bumen_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/My_name_TextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="部门：雨花台分局"
                    android:textColor="#ff666666"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/My_ZhiWei_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/My_bumen_TextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:text="职位：未填写"
                    android:textColor="#ff666666"
                    android:textSize="13.0sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:background="@color/main_bg"
                android:visibility="gone" />

            <TextView
                android:id="@+id/My_guangyu_textView"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="关于"
                android:textColor="#ff333333"
                android:textSize="15.0sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_bg" />

            <TextView
                android:id="@+id/My_Updeta_TextView"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:text="关于"
                android:textColor="#ff333333"
                android:textSize="15.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/My_QingLiHuangCun_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="center_vertical"
                    android:text="版本"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="V_0.01" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_bg" />

            <TextView
                android:id="@+id/ResetYouPassword"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="#ff333333"
                android:textSize="15.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_bg" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:gravity="center_vertical"
                android:text="分享"
                android:textColor="#ff333333"
                android:textSize="15.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_bg" />

            <Button
                android:id="@+id/TuiChu_Button"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="40.0dip"
                android:layout_marginRight="50.0dip"
                android:background="@color/red"
                android:text="退出登录"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="南京市公安局雨花台分局"
        android:textColor="@color/A333333"
        android:textSize="@dimen/sp_15" />
</LinearLayout>