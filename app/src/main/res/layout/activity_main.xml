<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearlayout_mainactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:fitsSystemWindows="true">
    </LinearLayout>
    <View
        android:id="@+id/View_mian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">
        <RadioGroup
            android:id="@+id/main_radioGroup_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <RadioButton
                android:id="@+id/rb_1"
                style="@style/rb_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/rd_shouyement_selector"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="首页"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/rb_2"
                style="@style/rb_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/rd_suosuo_selector"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="查询记录"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/rb_5"
                style="@style/rb_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/rd_mefragment_selector"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="我的"
                android:paddingTop="3dp"
                android:textSize="13sp"/>
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>